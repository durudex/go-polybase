{% import (
	"github.com/v1def/go-polybase/polylang"

	"github.com/iancoleman/strcase"
) %}

{% func Model(name string, fields []*polylang.Field) %}
type {%s strcase.ToCamel(name) %} struct {
	{%- for _, field := range fields -%}
	{%s strcase.ToCamel(field.Name) %} {% if field.Optional %}*{%- endif -%}{%s field.Type %} `json:"{%s field.Name %}"`
	{%- endfor -%}
}
{% endfunc %}
