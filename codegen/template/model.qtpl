{% import (
	"github.com/durudex/go-polybase/polylang"

	"github.com/iancoleman/strcase"
) %}

{% func Model(name string, fields []*polylang.Field) %}
type {%s strcase.ToCamel(name) %} struct {
	{%- for _, field := range fields -%}
	{%s strcase.ToCamel(field.Name) %} {% if field.Optional %}*{%- endif -%}{%s field.Type %}{% stripspace %}
	`json:"{%s field.Name %}{% if field.Optional %},omitempty{% endif %}"`{% endstripspace %}
	{%- endfor -%}
}
{% endfunc %}
